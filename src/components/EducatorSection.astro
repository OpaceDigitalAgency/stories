---
import type { EducatorSectionProps } from '../types/components';

const { educator, className = '' } = Astro.props as EducatorSectionProps;
---

<div class={`grid grid-cols-1 md:grid-cols-2 gap-8 ${className}`}>
  <!-- Parent Area -->
  <div class="relative px-6 py-8 rounded-3xl overflow-hidden transform-style-3d">
    <!-- Enhanced background gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary-100 via-primary-50 to-white animate-gradient"></div>
    <!-- Enhanced animated decorative blobs -->
    <div class="absolute -top-32 -right-32 w-[32rem] h-[32rem] bg-primary-200/30 rounded-full blur-3xl animate-blob transform translate-z-12"></div>
    <div class="absolute -bottom-32 -left-32 w-[32rem] h-[32rem] bg-primary-100/30 rounded-full blur-3xl animate-blob animation-delay-2000 transform translate-z-8"></div>
    
    <div class="relative z-10">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 bg-primary/20 rounded-full flex items-center justify-center mr-3 group-hover:scale-110 transition-transform duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.182 15.182a4.5 4.5 0 01-6.364 0M21 12a9 9 0 11-18 0 9 9 0 0118 0zM9.75 9.75c0 .414-.168.75-.375.75S9 10.164 9 9.75 9.168 9 9.375 9s.375.336.375.75zm-.375 0h.008v.015h-.008V9.75zm5.625 0c0 .414-.168.75-.375.75s-.375-.336-.375-.75.168-.75.375-.75.375.336.375.75zm-.375 0h.008v.015h-.008V9.75z" />
          </svg>
        </div>
        <h3 class="text-xl font-display font-bold text-text-primary">{educator.name}</h3>
      </div>
      
      <div class="flex items-center mb-4">
        {educator.avatar && (
          <img
            src={educator.avatar.url}
            alt={educator.name}
            class="w-16 h-16 rounded-full object-cover border-4 border-white shadow-md mr-4"
          />
        )}
        <div>
          <p class="text-lg font-medium text-text-primary">{educator.title}</p>
          <p class="text-sm text-text-secondary">{educator.institution}</p>
        </div>
      </div>
      
      <ul class="space-y-2 mb-6">
        <li class="flex items-start">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-primary mr-2 mt-0.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm text-text-secondary">Create reading lists for different age groups</span>
        </li>
        <li class="flex items-start">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-primary mr-2 mt-0.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm text-text-secondary">Monitor reading time and comprehension</span>
        </li>
        <li class="flex items-start">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-primary mr-2 mt-0.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm text-text-secondary">Get personalized story recommendations</span>
        </li>
      </ul>
      
      <a href="/parents" class="btn btn-primary py-2 px-4 shadow-playful btn-playful transform-style-3d hover:translate-z-2 group">
        <span class="relative z-10 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 mr-2 transform group-hover:scale-110 transition-transform">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
          Parent Resources
        </span>
        <div class="absolute inset-0 bg-gradient-to-r from-primary-600/0 via-primary-600/30 to-primary-600/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
      </a>
    </div>
  </div>
  
  <!-- Teacher Area -->
  <div class="relative px-6 py-8 rounded-3xl overflow-hidden transform-style-3d">
    <!-- Enhanced background gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-secondary-100 via-secondary-50 to-white animate-gradient"></div>
    <!-- Enhanced animated decorative blobs -->
    <div class="absolute -top-32 -right-32 w-[32rem] h-[32rem] bg-secondary-200/30 rounded-full blur-3xl animate-blob transform translate-z-12"></div>
    <div class="absolute -bottom-32 -left-32 w-[32rem] h-[32rem] bg-secondary-100/30 rounded-full blur-3xl animate-blob animation-delay-2000 transform translate-z-8"></div>
    
    <div class="relative z-10">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 bg-secondary/20 rounded-full flex items-center justify-center mr-3 group-hover:scale-110 transition-transform duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-secondary">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
          </svg>
        </div>
        <h3 class="text-xl font-display font-bold text-text-primary">For Teachers</h3>
      </div>
      
      <p class="text-text-secondary mb-4">
        Access classroom-ready stories and educational resources. Create reading assignments and track student progress.
      </p>
      
      <ul class="space-y-2 mb-6">
        <li class="flex items-start">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-secondary mr-2 mt-0.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm text-text-secondary">Curated reading lists by grade level</span>
        </li>
        <li class="flex items-start">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-secondary mr-2 mt-0.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm text-text-secondary">Lesson plans and discussion guides</span>
        </li>
        <li class="flex items-start">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-secondary mr-2 mt-0.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm text-text-secondary">Reading comprehension activities</span>
        </li>
      </ul>
      
      <a href="/teachers" class="btn btn-secondary py-2 px-4 shadow-playful btn-playful transform-style-3d hover:translate-z-2 group">
        <span class="relative z-10 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 mr-2 transform group-hover:scale-110 transition-transform">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
          Teacher Resources
        </span>
        <div class="absolute inset-0 bg-gradient-to-r from-secondary-600/0 via-secondary-600/30 to-secondary-600/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
      </a>
    </div>
  </div>
</div>