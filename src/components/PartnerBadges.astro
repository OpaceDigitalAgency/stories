---
import type { PartnerBadgesProps } from '../types/components';

const { partners, className = '' } = Astro.props as PartnerBadgesProps;
---

<div class={`mt-16 pt-12 border-t border-neutral-700/50 backdrop-blur-xl ${className}`}>
  <h3 class="text-2xl font-display font-bold text-neutral-200 mb-8 transform-style-3d hover:translate-z-4 transition-transform duration-500">Our Partners</h3>
  <div class="flex flex-wrap gap-12 items-center justify-center md:justify-start">
    {partners.map(partner => (
      <a
        href={partner.href}
        class="relative bg-neutral-800/70 hover:bg-neutral-700/70 p-6 rounded-2xl transition-all duration-700 flex items-center justify-center transform-style-3d hover:translate-z-8 hover:scale-110 shadow-playful hover:shadow-xl group"
        title={partner.name}
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src={partner.logo.url}
          alt={partner.logo.alternativeText || partner.name}
          class="h-12 w-auto opacity-80 group-hover:opacity-100 transition-all duration-700 transform group-hover:rotate-6 group-hover:scale-110"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-neutral-700/0 via-neutral-700/40 to-neutral-700/0 opacity-0 group-hover:opacity-100 transition-opacity duration-700 rounded-2xl"></div>
        <div class="absolute inset-0 bg-white/10 rounded-2xl scale-0 group-hover:scale-125 opacity-0 group-hover:opacity-100 transition-all duration-700 blur-sm"></div>
        <div class="absolute inset-0 bg-current/5 rounded-2xl scale-0 group-hover:scale-150 opacity-0 group-hover:opacity-100 transition-all duration-700 blur-lg"></div>
      </a>
    ))}
  </div>
  <p class="text-lg text-neutral-400 mt-8 leading-relaxed max-w-2xl transform-style-3d hover:translate-z-4 transition-transform duration-500">
    We're proud to partner with organizations that share our mission of promoting literacy and education.
  </p>
</div>