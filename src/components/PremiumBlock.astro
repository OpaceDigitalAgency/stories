---
// Premium Block Component
// This component displays premium/sponsored blocks for the Stories Directory

import SponsoredBadge from './SponsoredBadge.astro';

interface Props {
  type: 'sponsored' | 'editor-pick';
  title: string;
  description: string;
  image: string;
  link: string;
}

const { type, title, description, image, link } = Astro.props;

const typeClasses = {
  'sponsored': 'from-tertiary-100 to-tertiary-50/80 border-tertiary-200/50',
  'editor-pick': 'from-accent-100 to-accent-50/80 border-accent-200/50'
};

const badgeType = type === 'sponsored' ? 'sponsored' : 'featured';
---

<div class={`relative rounded-xl overflow-hidden border bg-gradient-to-br ${typeClasses[type]} shadow-playful hover:shadow-xl transition-all duration-300 transform-style-3d hover:translate-z-2 group`}>
  <!-- Premium badge -->
  <div class="absolute top-3 right-3 z-10">
    <SponsoredBadge type={badgeType} />
  </div>
  
  <a href={link} class="block">
    <div class="h-40 overflow-hidden">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110 group-hover:rotate-1"
      />
      <!-- Image overlay gradient -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    </div>
    
    <div class="p-4 relative">
      <!-- Content background gradient -->
      <div class="absolute inset-0 bg-gradient-to-br from-white/80 to-white/50 backdrop-blur-sm"></div>
      
      <div class="relative">
        <h3 class="font-display font-bold text-lg text-text-primary mb-2 group-hover:text-primary transition-colors duration-300">{title}</h3>
        <p class="text-text-secondary text-sm line-clamp-3">{description}</p>
        
        <div class="mt-4 flex justify-end">
          <span class="text-sm font-medium text-primary group-hover:text-primary/80 transition-all duration-300 flex items-center group-hover:translate-x-1">
            Learn More
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </span>
        </div>
      </div>
    </div>
  </a>
</div>