---
// Premium Block Component
// This component displays premium/sponsored blocks for the Stories Directory

import SponsoredBadge from './SponsoredBadge.astro';

interface Props {
  type: 'sponsored' | 'editor-pick';
  title: string;
  description: string;
  image: string;
  link: string;
}

const { type, title, description, image, link } = Astro.props;

const typeClasses = {
  'sponsored': 'from-purple-100 to-purple-50 border-purple-200',
  'editor-pick': 'from-amber-100 to-amber-50 border-amber-200'
};

const badgeType = type === 'sponsored' ? 'sponsored' : 'featured';
---

<div class={`relative rounded-xl overflow-hidden border bg-gradient-to-br ${typeClasses[type]} shadow-md hover:shadow-lg transition-shadow duration-300`}>
  <!-- Premium badge -->
  <div class="absolute top-3 right-3 z-10">
    <SponsoredBadge type={badgeType} />
  </div>
  
  <a href={link} class="block">
    <div class="h-40 overflow-hidden">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
      />
    </div>
    
    <div class="p-4">
      <h3 class="font-display font-bold text-lg text-text-primary mb-2">{title}</h3>
      <p class="text-text-secondary text-sm line-clamp-3">{description}</p>
      
      <div class="mt-4 flex justify-end">
        <span class="text-sm font-medium text-primary hover:text-primary/80 transition-colors flex items-center">
          Learn More
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 ml-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </span>
      </div>
    </div>
  </a>
</div>