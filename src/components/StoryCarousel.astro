---
interface Props {
  title: string;
  viewAllLink: string;
  stories: any[];
  carouselId: string;
}

const { title, viewAllLink, stories = [], carouselId } = Astro.props;
---

<section class="py-12">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-2xl font-display font-bold text-gray-800">{title}</h2>
      <a href={viewAllLink} class="text-secondary font-medium hover:text-secondary/80 transition-colors">
        View All â†’
      </a>
    </div>

    {stories.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {stories.map(story => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <a href={`/stories/${story.slug}`} class="block">
              {story.coverImage && (
                <div class="h-48 bg-gray-200">
                  <img 
                    src={story.coverImage} 
                    alt={story.title} 
                    class="w-full h-full object-cover"
                  />
                </div>
              )}
              
              <div class="p-6">
                <div class="flex items-center mb-3">
                  {story.tags?.length > 0 && (
                    <span class="bg-primary/10 text-primary px-2 py-1 rounded-full text-xs font-medium">
                      {story.tags[0]}
                    </span>
                  )}
                  {story.publishDate && (
                    <span class="text-gray-500 text-xs ml-3">
                      {new Date(story.publishDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                    </span>
                  )}
                </div>
                
                <h3 class="text-xl font-display font-bold text-gray-800 mb-3 hover:text-primary transition-colors">
                  {story.title}
                </h3>
                
                {story.excerpt && (
                  <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                    {story.excerpt}
                  </p>
                )}
                
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    {story.author?.avatar && (
                      <img 
                        src={story.author.avatar} 
                        alt={story.author.name} 
                        class="w-6 h-6 rounded-full mr-2"
                      />
                    )}
                    <span class="text-xs text-gray-600">
                      {story.author?.name || 'Anonymous'}
                    </span>
                  </div>
                  
                  <span class="text-primary hover:text-primary/80 text-sm font-medium flex items-center">
                    Read More
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3 ml-1">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-12 text-gray-500">
        No stories available at the moment.
      </div>
    )}
  </div>
</section>