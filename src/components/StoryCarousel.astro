---
interface Props {
  title: string;
  viewAllLink: string;
  stories: any[];
  carouselId: string;
}

const { title, viewAllLink, stories = [], carouselId } = Astro.props;
---

<section class="py-16 relative overflow-hidden">
  <!-- Background gradient and blobs -->
  <div class="absolute inset-0 bg-gradient-to-br from-neutral-50 via-white to-neutral-50"></div>
  <div class="absolute -top-20 -right-20 w-64 h-64 bg-primary/10 rounded-full blur-2xl"></div>
  <div class="absolute -bottom-20 -left-20 w-64 h-64 bg-secondary/10 rounded-full blur-2xl"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="flex justify-between items-center mb-10">
      <h2 class="text-2xl md:text-3xl font-display font-bold text-text-primary">{title}</h2>
      <a href={viewAllLink} class="text-secondary font-medium hover:text-secondary/80 transition-colors flex items-center group">
        View All
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 ml-1 transform group-hover:translate-x-1 transition-transform">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>

    {stories.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {stories.map(story => (
          <article class="relative group">
            <a href={`/stories/${story.slug}`} class="block">
              <!-- Card background with gradient -->
              <div class="absolute inset-0 bg-gradient-to-br from-white to-neutral-50 rounded-2xl transform group-hover:scale-[1.02] transition-all duration-300"></div>
              
              <!-- Content wrapper -->
              <div class="relative p-6 rounded-2xl">
                {story.coverImage && (
                  <div class="h-48 mb-6 rounded-xl overflow-hidden">
                    <img
                      src={story.coverImage}
                      alt={story.title}
                      class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                )}
                <div class="flex items-center mb-3">
                  {story.tags?.length > 0 && (
                    <span class="bg-primary/10 text-primary px-2 py-1 rounded-full text-xs font-medium">
                      {story.tags[0]}
                    </span>
                  )}
                  {story.publishDate && (
                    <span class="text-gray-500 text-xs ml-3">
                      {new Date(story.publishDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                    </span>
                  )}
                </div>
                
                <h3 class="text-xl font-display font-bold text-gray-800 mb-3 hover:text-primary transition-colors">
                  {story.title}
                </h3>
                
                {story.excerpt && (
                  <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                    {story.excerpt}
                  </p>
                )}
                
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    {story.author?.avatar && (
                      <img 
                        src={story.author.avatar} 
                        alt={story.author.name} 
                        class="w-6 h-6 rounded-full mr-2"
                      />
                    )}
                    <span class="text-xs text-gray-600">
                      {story.author?.name || 'Anonymous'}
                    </span>
                  </div>
                  
                  <span class="text-primary hover:text-primary/80 text-sm font-medium flex items-center">
                    Read More
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3 ml-1">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-12 text-gray-500">
        No stories available at the moment.
      </div>
    )}
  </div>
</section>