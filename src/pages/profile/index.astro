---
import NavHeader from '../../components/NavHeader.astro';
import Footer from '../../components/Footer.astro';
import ProfileSwitcher from '../../components/ProfileSwitcher.astro';
import ReadingHistory from '../../components/ReadingHistory.astro';
import '../../styles/base.css';

// Mock user data
const user = {
  name: "Alex Johnson",
  username: "alexj",
  email: "alex@example.com",
  avatar: "https://i.pravatar.cc/150?img=12",
  role: "child", // child, parent, teacher
  joinDate: new Date('2025-01-15'),
  stats: {
    storiesRead: 42,
    booksCompleted: 12,
    timeSpent: 840, // minutes
    achievements: 8
  }
};

// Format minutes to hours and minutes
function formatReadingTime(minutes) {
  const hours = Math.floor(minutes / 60);
  const mins = minutes % 60;
  return `${hours}h ${mins}m`;
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Your Profile | Stories From The Web</title>
