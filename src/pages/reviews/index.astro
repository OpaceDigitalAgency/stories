---
import NavHeader from '../../components/NavHeader.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/base.css';

// Filter options
// Filter options will be fetched from API
const ageGroups = [];
const reviewerTypes = [];
const sortOptions = [];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Reviews & Recommendations | Stories From The Web</title>
    <meta name="description" content="Read honest reviews from parents, teachers, and young readers." />
  </head>
  <body class="min-h-screen flex flex-col bg-neutral">
    <NavHeader />
    
    <main class="flex-grow">
      <!-- Hero Section -->
      <section class="bg-gradient-to-r from-secondary/90 to-tertiary/90 text-white py-16 md:py-24">
        <div class="container mx-auto px-4 text-center">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6">
            Reviews & Recommendations
          </h1>
          <p class="text-xl md:text-2xl max-w-3xl mx-auto mb-8">
            Discover what parents, teachers, and young readers are saying about our stories.
          </p>
          
          <!-- Search Bar -->
          <div class="max-w-2xl mx-auto">
            <div class="relative">
              <input 
                type="text" 
                placeholder="Search reviews by keyword, title, or author..." 
                class="w-full px-4 py-3 pl-12 rounded-md border-none focus:outline-none focus:ring-2 focus:ring-white/50 text-gray-800"
              />
              <div class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
                </svg>
              </div>
            </div>
          </div>
        </div>
      </section>
      
      <!-- Reviews Section -->
      <section class="py-16">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <!-- Filters Sidebar -->
            <div class="lg:col-span-1">
              <div class="bg-white rounded-lg shadow-md p-6 sticky top-24">
                <div class="flex justify-between items-center mb-4">
                  <h2 class="text-lg font-display font-semibold text-gray-800">Filters</h2>
                  <button class="text-sm text-secondary hover:text-secondary/80 transition-colors">
                    Reset All
                  </button>
                </div>
                
                <!-- Age Group Filter -->
                <div class="mb-6">
                  <h3 class="text-sm font-medium text-gray-700 mb-2">Age Group</h3>
                  <div class="space-y-2">
                    {ageGroups.map(age => (
                      <label class="flex items-center">
                        <input type="checkbox" class="rounded text-secondary focus:ring-secondary" />
                        <span class="ml-2 text-sm text-gray-600">{age}</span>
                      </label>
                    ))}
                  </div>
                </div>
                
                <!-- Reviewer Type Filter -->
                <div class="mb-6">
                  <h3 class="text-sm font-medium text-gray-700 mb-2">Reviewer Type</h3>
                  <div class="space-y-2">
                    {reviewerTypes.map(type => (
                      <label class="flex items-center">
                        <input type="checkbox" class="rounded text-secondary focus:ring-secondary" />
                        <span class="ml-2 text-sm text-gray-600">{type}</span>
                      </label>
                    ))}
                  </div>
                </div>
                
                <!-- Rating Filter -->
                <div class="mb-6">
                  <h3 class="text-sm font-medium text-gray-700 mb-2">Minimum Rating</h3>
                  <div class="flex items-center">
                    <input 
                      type="range" 
                      min="1" 
                      max="5" 
                      step="1" 
                      value="3" 
                      class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-secondary"
                    />
                    <span class="ml-2 text-sm font-medium text-gray-700">3★+</span>
                  </div>
                </div>
                
                <!-- Apply Filters Button -->
                <button class="w-full py-2 bg-secondary text-white rounded-md hover:bg-secondary/90 transition-colors font-medium">
                  Apply Filters
                </button>
              </div>
            </div>
            
            <!-- Reviews List -->
            <div class="lg:col-span-3">
              <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-display font-bold text-text-primary">Community Reviews</h2>
                
                <div class="flex items-center">
                  <label class="text-sm text-gray-600 mr-2">Sort by:</label>
                  <select class="text-sm border-gray-300 rounded-md focus:border-secondary focus:ring focus:ring-secondary/20 focus:ring-opacity-50">
                    {sortOptions.map(option => (
                      <option>{option}</option>
                    ))}
                  </select>
                </div>
              </div>
              
              <!-- Reviews Placeholder -->
              <div class="space-y-6">
                {/* Reviews will be fetched from API */}
              </div>
              
              <!-- Pagination -->
              <div class="mt-8 flex justify-center">
                <nav class="inline-flex rounded-md shadow">
                  <a href="#" class="py-2 px-4 bg-white border border-gray-300 rounded-l-md text-sm font-medium text-gray-500 hover:bg-gray-50">
                    Previous
                  </a>
                  <a href="#" class="py-2 px-4 bg-white border-t border-b border-gray-300 text-sm font-medium text-secondary">
                    1
                  </a>
                  <a href="#" class="py-2 px-4 bg-white border-t border-b border-gray-300 text-sm font-medium text-gray-500 hover:bg-gray-50">
                    2
                  </a>
                  <a href="#" class="py-2 px-4 bg-white border border-gray-300 rounded-r-md text-sm font-medium text-gray-500 hover:bg-gray-50">
                    Next
                  </a>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </section>
      
      <!-- Leave a Review Section -->
      <section class="py-16 bg-neutral-dark">
        <div class="container mx-auto px-4 max-w-4xl">
          <h2 class="text-3xl font-display font-bold text-text-primary text-center mb-8 fancy-underline">Leave a Review</h2>
          
          <div class="bg-white rounded-lg shadow-md p-6">
            <p class="text-center text-gray-600 mb-6">
              Share your thoughts on a story you've read to help other parents, teachers, and young readers find their next favorite book.
            </p>
            
            <form class="space-y-4">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label for="story" class="block text-sm font-medium text-gray-700 mb-1">Story Title</label>
                  <select 
                    id="story" 
                    name="story" 
                    class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
                    required
                  >
                    <option value="" disabled selected>Select a story</option>
                    {/* Story options will be fetched from API */}
                  </select>
                </div>
                
                <div>
                  <label for="age-group" class="block text-sm font-medium text-gray-700 mb-1">Age Group</label>
                  <select 
                    id="age-group" 
                    name="age-group" 
                    class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
                    required
                  >
                    <option value="" disabled selected>Select an age group</option>
                    {ageGroups.map(age => (
                      <option value={age}>{age}</option>
                    ))}
                  </select>
                </div>
              </div>
              
              <div>
                <label for="review-title" class="block text-sm font-medium text-gray-700 mb-1">Review Title</label>
                <input 
                  type="text" 
                  id="review-title" 
                  name="review-title" 
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
                  placeholder="Summarize your thoughts in a few words"
                  required
                />
              </div>
              
              <div>
                <label for="review-content" class="block text-sm font-medium text-gray-700 mb-1">Your Review</label>
                <textarea 
                  id="review-content" 
                  name="review-content" 
                  rows="4" 
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-secondary focus:border-transparent"
                  placeholder="Share your experience with this story."
                  required
                ></textarea>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Rating</label>
                <div class="flex items-center">
                  <div class="flex text-gray-400">
                    ★★★★★
                  </div>
                  <span class="ml-2 text-sm text-gray-500">Click to rate</span>
                </div>
              </div>
              
              <div class="text-center">
                <button 
                  type="submit" 
                  class="py-2 px-6 bg-secondary text-white rounded-md hover:bg-secondary/90 transition-colors font-medium"
                >
                  Submit Review
                </button>
              </div>
            </form>
          </div>
        </div>
      </section>
    </main>
    
    <Footer />
  </body>
</html>
